{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": [
            "ES2021", "ESNext.AsyncIterable"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "./src",
        "moduleResolution": "node",
        "strict": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
	"include": ["./src/**/*"]
}