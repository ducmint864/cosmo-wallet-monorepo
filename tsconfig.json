{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": [
            "ES2021", "ESNext.AsyncIterable"
        ],
        "allowJs": true,
		"rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
		"declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
    },
	"include": ["src/**/*"]
}